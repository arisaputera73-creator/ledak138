<body>
  <h1>🎰 Slot Demo</h1>
  <div class="slot">
    <div id="s1">🍒</div>
    <div id="s2">🍋</div>
    <div id="s3">🍊</div>
  </div>
  <button onclick="spin()">SPIN</button>
  <div id="result"></div>

  <script>
    const symbols = ["🍒","🍋","🍊","🍉","⭐","7️⃣"];
    
    function spin() {
      let s1 = symbols[Math.floor(Math.random()*symbols.length)];
      let s2 = symbols[Math.floor(Math.random()*symbols.length)];
      let s3 = symbols[Math.floor(Math.random()*symbols.length)];
      
      document.getElementById("s1").innerText = s1;
      document.getElementById("s2").innerText = s2;
      document.getElementById("s3").innerText = s3;
      
      if(s1 === s2 && s2 === s3){
        document.getElementById("result").innerText = "🎉 Jackpot!";
      } else if(s1 === s2 || s2 === s3 || s1 === s3){
        document.getElementById("result").innerText = "✨ Lumayan!";
      } else {
        document.getElementById("result").innerText = "😢 Coba lagi...";
      }
    }
  </script>
